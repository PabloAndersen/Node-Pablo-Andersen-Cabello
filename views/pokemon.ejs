<%- include("template/cabecera",{tituloWeb: 'Página inicial'})%>

    <div class="container">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Tipo</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acción</th>
              </tr>
            </thead>
            <tbody>
            <% if (arrayPokemon.length>0) { %>
                <% arrayPokemon.forEach(pokemon => { %>
                    <tr>
                        <th scope="row"><%= pokemon.id %> </th>
                        <td><%= pokemon.nombre %></td>
                        <td><%= pokemon.tipo %></td>
                        <td><%= pokemon.descripcion %></td>
                        <td>
                            <a class="btn btn-warning btn-sm btn-light" href="pokemon/<%= pokemon.id %>">Editar/Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
            
              
            </tbody>
          </table>
          <a class="btn btn-success btn-block my-4" href="/pokemon/crear">Crear un nuevo pokemon</a>
    </div>

<%- include("template/footer")%>